    <name>hive.catalog.hive_catalog.uri</name>
    <value>thrift://hive-metastore:9083</value>
  </property>
  <property>
    <name>hive.catalog.hive_catalog.catalog-impl</name>
    <value>org.apache.iceberg.hive.HiveCatalog</value>
